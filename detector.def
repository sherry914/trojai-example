Bootstrap: docker
From: python:3.8-bullseye

%files
    ./detector.py /
    ./entrypoint.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /

%post
    pip install --upgrade pip
    pip install torch==1.13.1
    pip install trojai_rl gym-minigrid==1.0.2
    pip install jsonschema jsonargparse jsonpickle scikit-learn

%runscript
    exec python3 /entrypoint.py "$@"
